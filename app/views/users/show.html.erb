<% provide(:title, @user.name) %>
<div class="row" id="user_page">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for(@user, size: 50) %>
        <%= @user.name %>
      </h1>
      <strong id="books_on_list" class="stat">
        <%= pluralize(@user.books.count, "book") + " on reading list" %>
      </strong>
    </section>
    <section class="book_form">
      <%= render 'shared/book_search' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Reading List</h3>
    <% if @user.books.any? %>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% else %>
      <span class="no_books">
        <%= "No books on " + @user.name + "'s reading list :(" %>
      </span>
    <% end %>
  </div>
</div>