<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.books.any? %>
      <a href="<%= books_user_path(@user) %>">
       <strong id="books_on_list" class="stat">
         <%= pluralize(@user.books.count, "book") + " to read" %>
       </strong>
      </a>
      <ol class="books">
        <%= render @books %>
      </ol>
      <%= will_paginate @books %>
    <% end %>
  </div>
</div>