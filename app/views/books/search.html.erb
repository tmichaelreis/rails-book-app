<% provide(:title, params[:search]) %>
<% @user = current_user %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'shared/user_info' %>
    </section>
    <section class="book_form">
      <%= render 'shared/book_search' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @search_results.count > 0 %>
      <h3><%= pluralize(@search_results.count, 'result') %></h3>
        <%= render 'search_results', search_results: @search_results %>
    <% else %>
      <h3>No results found</h3>
    <% end %>
  </div>
</div>

