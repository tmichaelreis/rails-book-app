<!--Should end up being signup or user's profile-->
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="book_form">
        <%= render 'shared/book_search' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Reading List</h3>
      <%= render 'shared/reading_list' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to the Book Club</h1>
    <h2>
        A place where Reading is Rad!
    </h2>
    <%= link_to "Sign up", signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: "Rails Logo"),
                        'http://rubyonrails.org/' %>
<% end %>